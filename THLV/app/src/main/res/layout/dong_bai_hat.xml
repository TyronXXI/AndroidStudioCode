<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageviewHinh"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textviewTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@id/imageviewHinh"
        android:text="Tên"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textviewMoTa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewTen"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/imageviewHinh"
        android:text="Mô tả"
        android:textColor="#808080"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textviewGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewMoTa"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/imageviewHinh"
        android:text="Giá"
        android:textColor="#2196F3"
        android:textSize="14dp"
        android:textStyle="bold"
         />

</RelativeLayout>
